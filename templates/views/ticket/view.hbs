                    </tr>
                    <tr>
                        <th class="th-lg">Description</th>
                        <td>{{ticket.description}}</td>
                    </tr>
                    <tr>
                        <th class="th-lg">Assinged By</th>
                         <td>{{ticket.owner.name}}</td>
                    </tr>
                    <tr>
                        <th class="th-lg">Assinged To</th>
                        <td>{{ticket.assignedto.name}}</td>
                    </tr>
                    <tr>
                        <th class="th-lg">Status</th>
                        <td>{{ticket.status}}</td>
                    </tr>
                </tbody>
            </table>
