{{>header}}
    <div class="container pt-3"><br>
        <form  method="POST" enctype="multipart/form-data" action="/ticket/create" >
            <fieldset>
                <legend>{{page_title}}</legend><br><br>
                {{#if messages.error }}
                    <div class="col-lg-6 alert alert-danger">
                        {{messages.error}}
                    </div>
                {{/if }}
         
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-label" for="form3Example3">Title</label>
                            <input type="text" name="title" class="form-control"
                    placeholder="Enter Title" />
                        </div>
                    </div>
                </div><br>

                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-label" for="form3Example3">Description</label>
                            <textarea class="form-control" name="description" id="" cols="30" rows="10"></textarea>
                        </div>
                    </div>
                </div><br>
                
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-label" for="form3Example3">Assigned To</label>
                            <select name="assignedto" id="assignedto" class="form-control">
                                {{#if listUsers}}
                                    {{#each listUsers}}
                                        <option value="{{this._id}}">{{this.name}}</option>
                                    {{/each}}
                                {{/if }}
                            </select>
                        </div>
                    </div>
                </div><br>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-label" for="ticketImage">Ticket Image</label>
                            <input type="file" name="ticket_image" id="ticket_image" class="form-control" 
                            accept="image/*" onchange="loadFile(event)" multiple>
                        <div id="image_preview"></div>
                        </div>
                    </div>
                </div>
                <div class="text-center text-lg-start mt-4 pt-2">
                    <input type="submit" id="btnUpload" class="btn btn-primary" value="Create">
                </div> 
            </fieldset>
        </form>
    </div>
{{>footer}}